<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calorias.Vistas.MenuCaratula">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#FFE5B5"
                     Spacing="20">
            <Label Text="Calorias"
                   FontSize="40"
                   FontAttributes="Bold"
                   Margin="0,20,0,0"
                   HorizontalOptions="FillAndExpand"/>
            <Frame VerticalOptions="FillAndExpand"
                   Margin="20,20,20,20"
                   HasShadow="False">
                <StackLayout>
                    <Image Source="espe.jpeg"/>
                    <Image Source="redes.jpeg"/>
                    <Button Text="Iniciar"
                            TextTransform="None"
                            BackgroundColor="#5BE17B"
                            CornerRadius="10"
                            FontSize="Medium"
                            FontAttributes="Bold"
                            x:Name="btniniciar"
                            Clicked="btniniciar_Clicked"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>